<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Screen Capture" Height="600" Width="900"
        Loaded="Window_Loaded"
        Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- コントロールパネル -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBlock Text="Screen:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <ComboBox x:Name="ScreenComboBox" 
                      Width="200" 
                      SelectionChanged="ScreenComboBox_SelectionChanged"/>
            <Button x:Name="StartButton" 
                    Content="Start Capture" 
                    Width="100" 
                    Margin="10,0,0,0" 
                    Click="StartButton_Click"/>
            <Button x:Name="StopButton" 
                    Content="Stop Capture" 
                    Width="100" 
                    Margin="10,0,0,0" 
                    Click="StopButton_Click"
                    IsEnabled="False"/>
        </StackPanel>

        <!-- キャプチャ表示エリア -->
        <Border Grid.Row="1" Background="Black" Margin="10">
            <Image x:Name="CaptureImage" Stretch="Uniform"/>
        </Border>
    </Grid>
</Window>
