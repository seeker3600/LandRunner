<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="WinUiApp1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinUiApp1"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="Screen Capture">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Padding="12" Spacing="8">
            <ComboBox x:Name="DisplayComboBox" 
                      MinWidth="250"
                      PlaceholderText="Select a display"
                      SelectionChanged="DisplayComboBox_SelectionChanged"
                      DisplayMemberPath="FriendlyName"/>
            <Button x:Name="StartButton" 
                    Content="Start Capture" 
                    Click="StartButton_Click"
                    IsEnabled="False"/>
            <Button x:Name="StopButton" 
                    Content="Stop Capture" 
                    Click="StopButton_Click"
                    IsEnabled="False"/>

            <!-- 変換パラメータ入力UI -->
            <Border Padding="8,0" 
                    BorderBrush="{ThemeResource DividerStrokeColorDefaultBrush}" 
                    BorderThickness="1,0,0,0">
                <StackPanel Orientation="Horizontal" Spacing="8">
                    <TextBlock Text="X:" VerticalAlignment="Center"/>
                    <NumberBox x:Name="OffsetXNumberBox"
                               Value="0"
                               Minimum="-2000"
                               Maximum="2000"
                               SpinButtonPlacementMode="Inline"
                               Width="100"
                               ValueChanged="TransformParameter_ValueChanged"/>
                    
                    <TextBlock Text="Y:" VerticalAlignment="Center"/>
                    <NumberBox x:Name="OffsetYNumberBox"
                               Value="0"
                               Minimum="-2000"
                               Maximum="2000"
                               SpinButtonPlacementMode="Inline"
                               Width="100"
                               ValueChanged="TransformParameter_ValueChanged"/>
                    
                    <TextBlock Text="角度:" VerticalAlignment="Center"/>
                    <NumberBox x:Name="AngleNumberBox"
                               Value="0"
                               Minimum="-360"
                               Maximum="360"
                               SpinButtonPlacementMode="Inline"
                               Width="100"
                               ValueChanged="TransformParameter_ValueChanged"/>
                </StackPanel>
            </Border>

            <TextBlock x:Name="StatsTextBlock"
                       VerticalAlignment="Center"
                       Margin="16,0,0,0"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                       Text="No stats"/>
        </StackPanel>

        <Border Grid.Row="1" 
                Margin="12"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="8"
                Background="Black">
            <Grid x:Name="CaptureContainer">
                <TextBlock Text="Select a display and click Start Capture"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </Grid>
        </Border>
    </Grid>
</Window>

